# the purpose of this file is to generate javascript code based on the game state variable in the method. The overall goal is to update the view in response to the user action of clicking the button 
<% @game_state.each_with_index do |row, row_index| %>
  var rowElement = $('.game-grid .row').eq(<%= row_index %>)
  <% row.each_with_index do |cell, cell_index| %>
    var cellElement = rowElement.find('.cell').eq(<%= cell_index %>)
    cellElement.find('.cell-number').text(<%= cell[:number] %>);
  <% end %>
<% end %>
